@model IEnumerable<Northwind.Core.Domain.Entities.Category>


<section class="content">

    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-lg-12 mx-auto order-1 order-lg-2">

                <div class="row">
                    <div class="col-md">
                        <div class="card card-primary card-outline">
                            <div class="card-header border-0">
                                <h3 class="card-title">Categories</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="maximize" title="Maximizar">
                                        <i class="fas fa-expand"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool btn-sm" data-card-widget="collapse" title="Expandir / Recolher">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>

                            </div>
                            <hr class="m-0" />

                            <div class="card-body table-responsive">

                                <table id="table" class="table table-striped table-bordered table-sm dt-responsive nowrap">
                                    
                                </table>
                            </div>

                            <div class="card-footer">
                               
                            </div>
                        </div>

                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts
{
<script>
    $(document).ready(function ()
    {
        $('#table').DataTable({
                processing: true, 
                serverSide: true, 
                ajax: {  
                    url: "/Categories/GridCategories",  
                    type: "GET",  
                    datatype: "json",
                    dataSrc: ""
                },  
                columns: [  
                      { "data": "categoryName", "name": "categoryName", "autoWidth": true },  
                      { "data": "description", "name": "description", "autoWidth": true }, 
                      {  
                          "render": function (data, type, full, meta)  
                          { return '<a class="btn btn-info btn-sm" href="/Demo/Edit/' + full.CustomerID + '">Edit</a>'; }  
                      },  
                       {  
                           data: null, render: function (data, type, row) {  
                               return "<a href='#' class='btn btn-danger btn-sm' onclick=DeleteData('" + row.CustomerID + "'); >Delete</a>";  
                           }  
                       },  
                ]  
        });
    });
</script>
}