@model IEnumerable<Northwind.Core.Domain.Entities.Shippers>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">
        <button type="button" class="btn btn-primary">Add Shipper</button>
    </a>
</p>

<table class="table" id="table-shipper">
    <thead>
        <tr>
            <th>
                 Company Name
            </th>
            <th>
                 Phone
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a asp-action="Create">
                    <button type="button" class="btn btn-primary btn-sm">
                        <i class="fas fa-pencil"></i>  Edit  
                    </button>
                </a>
                 
                <a asp-action="Create">
                    <button type="button" class="btn btn-secondary btn-sm">
                        <i class="fas fa-circle-info"></i> Details
                    </button>
                </a>

                <a asp-action="Create">
                    <button type="button" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-can"></i> Delete
                    </button>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts
{
<script>
    $('#table-shipper').DataTable();
</script>
}