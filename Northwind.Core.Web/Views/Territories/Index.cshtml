@model IEnumerable<Northwind.Core.Domain.Entities.Territory>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">
        <button type="button" class="btn btn-primary">Add Terrytory</button>
    </a>
</p>
<table class="table table-striped table-bordered table-hover" id="table-territories">
    <thead>
        <tr>
            <th>
                Territory Description
            </th>
            <th>
                Region
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TerritoryDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region.RegionDescription)
            </td>
            <td>

                <a asp-action="Create">
                    <button type="button" class="btn btn-primary btn-sm">
                        <i class="fas fa-pencil"></i>  Edit  
                    </button>
                </a>
                 
                <a asp-action="Create">
                    <button type="button" class="btn btn-secondary btn-sm">
                        <i class="fas fa-circle-info"></i> Details
                    </button>
                </a>

                <a asp-action="Create">
                    <button type="button" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-can"></i> Delete
                    </button>
                </a>

            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts{
<script>
    $('#table-territories').DataTable();
</script>
}